<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Education -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Education"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="10th pass, 12th pass, graduate from college"
            android:layout_marginBottom="16dp"/>

        <!-- Experience -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experience"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="2 yr backend, 1 yr frontend"
            android:layout_marginBottom="16dp"/>

        <!-- Languages -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Languages"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etLanguages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hindi, english"
            android:layout_marginBottom="16dp"/>

        <!-- Skills -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="django, react"
            android:layout_marginBottom="16dp"/>

        <!-- Education Certificate Image -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Education Certificate (Image)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnEducationImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Education Certificate"
            android:layout_marginBottom="16dp"/>

        <!-- Profile Image -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile Picture"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnProfileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Profile Picture"
            android:layout_marginBottom="16dp"/>

        <!-- Resume Document -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resume (PDF/DOC)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Resume"
            android:layout_marginBottom="16dp"/>

        <!-- Resume Image (Screenshot) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resume Screenshot (Image)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnResumeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Resume Screenshot"
            android:layout_marginBottom="16dp"/>

        <!-- File Status -->
        <TextView
            android:id="@+id/tvFileStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No files selected"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:layout_marginTop="16dp"
            android:background="@color/design_default_color_primary"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>