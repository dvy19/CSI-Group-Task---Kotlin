<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp">


        <!-- Profile Image Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Your Details Here"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />


        <Button
            android:background="#4E61D3"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:padding="10dp"
            android:id="@+id/uploadProfileImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Image"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Experience Section -->
        <TextView
            android:textColor="@color/black"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experience"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:background="@drawable/login_button"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="10dp"
            android:id="@+id/experienceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your experience (e.g., 2 yr backend, 1 yr frontend)"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="16dp" />

        <!-- Education Text Section -->
        <TextView
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Education"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:background="@drawable/login_button"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="10dp"
            android:id="@+id/educationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your education details"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="16dp" />





        <Button
            android:background="#4E61D3"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:padding="10dp"
            android:id="@+id/uploadEducationImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Education Certificate"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Skills Section -->
        <TextView
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:background="@drawable/login_button"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/skillsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your skills (e.g., Django, React)"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Languages Section -->
        <TextView
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Languages"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:background="@drawable/login_button"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/languagesEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter languages you know (e.g., Hindi, English)"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Resume Upload Section -->
        <TextView
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resume File"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:background="#4E61D3"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:padding="10dp"
            android:id="@+id/uploadResumeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Resume File"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/resumeFileNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No file selected"
            android:textSize="12sp"
            android:layout_marginBottom="24dp" />

        <!-- Resume Image Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resume Image"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />





        <Button
            android:padding="15dp"
            android:background="#4E61D3"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:id="@+id/uploadResumeImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resume Image"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Submit Button -->
        <Button
            android:background="#4E61D3"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

</ScrollView>