<?xml version="1.0" encoding="utf-8"?>
<!-- Main Home Screen Layout - activity_home.xml -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">



        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="12dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="#9E9E9E" />

                <EditText
                    android:id="@+id/searchBar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Search Jobs"
                    android:textColorHint="#9E9E9E"
                    android:textColor="#212121"
                    android:textSize="15sp"
                    android:padding="12dp"
                    android:inputType="text"
                    android:maxLines="1" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="12dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    app:tint="#9E9E9E" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Banner Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:backgroundTint="#1A237E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 others are reviewing your"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interview of getting hired"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bannerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read More"
                    android:textColor="#1A237E"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Curated Jobs Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curated Jobs For You"
                android:textSize="18sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Job Category Pills -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:background="@drawable/bg_pill_selected"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remote"
                        android:textColor="#757575"
                        android:textSize="13sp"
                        android:background="@drawable/bg_pill_unselected"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Time"
                        android:textColor="#757575"
                        android:textSize="13sp"
                        android:background="@drawable/bg_pill_unselected"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Part Time"
                        android:textColor="#757575"
                        android:textSize="13sp"
                        android:background="@drawable/bg_pill_unselected"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp" />

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Job Cards Horizontal Scroll -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Job Card 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/img_5"
                                android:background="@drawable/bg_icon_circle"
                                android:padding="8dp"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dribbble"
                                android:textSize="15sp"
                                android:textColor="#212121"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UI designer"
                                android:textSize="13sp"
                                android:textColor="#757575"
                                android:layout_marginBottom="12dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginTop="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Remote"
                                    android:textSize="11sp"
                                    android:textColor="#757575"
                                    android:gravity="center"
                                    android:background="@drawable/bg_tag"
                                    android:paddingVertical="4dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Contract"
                                    android:textSize="11sp"
                                    android:textColor="#757575"
                                    android:gravity="center"
                                    android:background="@drawable/bg_tag"
                                    android:paddingVertical="4dp"
                                    android:layout_marginStart="4dp" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 days ago"
                                android:textSize="11sp"
                                android:textColor="#BDBDBD"
                                android:layout_marginTop="12dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Job Card 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/img_6"
                                android:background="@drawable/bg_icon_circle"
                                android:padding="8dp"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pinterest"
                                android:textSize="15sp"
                                android:textColor="#212121"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Digital Marketing"
                                android:textSize="13sp"
                                android:textColor="#757575"
                                android:layout_marginBottom="12dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginTop="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Remote"
                                    android:textSize="11sp"
                                    android:textColor="#757575"
                                    android:gravity="center"
                                    android:background="@drawable/bg_tag"
                                    android:paddingVertical="4dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Full-time"
                                    android:textSize="11sp"
                                    android:textColor="#757575"
                                    android:gravity="center"
                                    android:background="@drawable/bg_tag"
                                    android:paddingVertical="4dp"
                                    android:layout_marginStart="4dp" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 days ago"
                                android:textSize="11sp"
                                android:textColor="#BDBDBD"
                                android:layout_marginTop="12dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Job Card 3 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/img_7"
                                android:background="@drawable/bg_icon_circle"
                                android:padding="8dp"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LinkedIn"
                                android:textSize="15sp"
                                android:textColor="#212121"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lead Designer"
                                android:textSize="13sp"
                                android:textColor="#757575"
                                android:layout_marginBottom="12dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginTop="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Remote"
                                    android:textSize="11sp"
                                    android:textColor="#757575"
                                    android:gravity="center"
                                    android:background="@drawable/bg_tag"
                                    android:paddingVertical="4dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Full-time"
                                    android:textSize="11sp"
                                    android:textColor="#757575"
                                    android:gravity="center"
                                    android:background="@drawable/bg_tag"
                                    android:paddingVertical="4dp"
                                    android:layout_marginStart="4dp" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 week ago"
                                android:textSize="11sp"
                                android:textColor="#BDBDBD"
                                android:layout_marginTop="12dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

        <!-- Specialization Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialization"
                android:textSize="18sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Design Icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_edit"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="8dp"
                        app:tint="#1A237E" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Design"
                        android:textSize="13sp"
                        android:textColor="#212121"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <!-- Technology Icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_manage"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="8dp"
                        app:tint="#1A237E" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Technology"
                        android:textSize="13sp"
                        android:textColor="#212121"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <!-- Marketing Icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_compass"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="8dp"
                        app:tint="#1A237E" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marketing"
                        android:textSize="13sp"
                        android:textColor="#212121"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Recommendation Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <!-- Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Recommendation"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textSize="13sp"
                    android:textColor="#1A237E"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Recommendation Job Card 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/companyLogo1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/img_8"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/companyName1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Netflix"
                        android:textSize="15sp"
                        android:textColor="#212121"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/companyLogo1"
                        app:layout_constraintEnd_toStartOf="@id/bookmarkIcon1"
                        app:layout_constraintTop_toTopOf="@id/companyLogo1" />

                    <TextView
                        android:id="@+id/jobTitle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Senior UI/UX Designer"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/companyLogo1"
                        app:layout_constraintEnd_toStartOf="@id/bookmarkIcon1"
                        app:layout_constraintTop_toBottomOf="@id/companyName1" />

                    <ImageView
                        android:id="@+id/bookmarkIcon1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/btn_star_big_off"
                        android:contentDescription="Bookmark"
                        app:tint="#9E9E9E"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/companyLogo1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remote"
                            android:textSize="11sp"
                            android:textColor="#757575"
                            android:background="@drawable/bg_tag"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contract"
                            android:textSize="11sp"
                            android:textColor="#757575"
                            android:background="@drawable/bg_tag"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New York"
                            android:textSize="11sp"
                            android:textColor="#757575"
                            android:background="@drawable/bg_tag"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Recommendation Job Card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/companyLogo2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/img_9"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/companyName2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Facebook"
                        android:textSize="15sp"
                        android:textColor="#212121"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/companyLogo2"
                        app:layout_constraintEnd_toStartOf="@id/bookmarkIcon2"
                        app:layout_constraintTop_toTopOf="@id/companyLogo2" />

                    <TextView
                        android:id="@+id/jobTitle2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="UI Manager"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/companyLogo2"
                        app:layout_constraintEnd_toStartOf="@id/bookmarkIcon2"
                        app:layout_constraintTop_toBottomOf="@id/companyName2" />

                    <ImageView
                        android:id="@+id/bookmarkIcon2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/btn_star_big_off"
                        android:contentDescription="Bookmark"
                        app:tint="#9E9E9E"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/companyLogo2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remote"
                            android:textSize="11sp"
                            android:textColor="#757575"
                            android:background="@drawable/bg_tag"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contract"
                            android:textSize="11sp"
                            android:textColor="#757575"
                            android:background="@drawable/bg_tag"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seattle"
                            android:textSize="11sp"
                            android:textColor="#757575"
                            android:background="@drawable/bg_tag"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>