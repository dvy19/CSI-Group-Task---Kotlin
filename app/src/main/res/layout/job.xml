<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/img"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search Jobs"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/btnFilter"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/img"
            android:contentDescription="Filter"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Search Bar , INSERT IMAGE HERE -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"

        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img"
            android:contentDescription="Search Icon" />

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Job title, keywords..."
            android:background="@android:color/transparent"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:inputType="text" />

        <ImageView
            android:id="@+id/btnClearSearch"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img"
            android:contentDescription="Clear"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Location Filter, IMAGE HERE -->
    <LinearLayout
        android:id="@+id/locationFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:padding="12dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/searchBar">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img"
            android:contentDescription="Location Icon" />

        <TextView
            android:id="@+id/locationText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All Locations"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginStart="12dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img"
            android:contentDescription="Dropdown" />
    </LinearLayout>

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:id="@+id/filterChipsScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/locationFilter">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/chipFullTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full-Time"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/chip_bg"
                android:textColor="#666666"
                android:textSize="13sp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/chipPartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Part-Time"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/chip_bg"
                android:textColor="#666666"
                android:textSize="13sp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/chipRemote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remote"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/chip_bg"
                android:textColor="#666666"
                android:textSize="13sp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/chipContract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contract"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/chip_bg"
                android:textColor="#666666"
                android:textSize="13sp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Results Count -->
    <TextView
        android:id="@+id/resultsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="147 jobs found"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/filterChipsScroll"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Sort Button -->
    <LinearLayout
        android:id="@+id/sortButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/filterChipsScroll"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort"
            android:textSize="14sp"
            android:textColor="#666666" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_sort"
            android:contentDescription="Sort"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Job List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/resultsCount"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Job Card 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_bg"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/company_logo"
                        android:background="@drawable/logo_bg"
                        android:padding="8dp"
                        android:contentDescription="Company Logo" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Senior Android Developer"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Google Inc."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/img"
                        android:contentDescription="Bookmark"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ New York, USA"
                        android:textSize="13sp"
                        android:textColor="#666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¼ Full-Time"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$120K - $150K/year"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#00C853"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posted 2 days ago"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Job Card 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/img"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/img"
                        android:background="@drawable/img"
                        android:padding="8dp"
                        android:contentDescription="Company Logo" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UI/UX Designer"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apple Inc."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/img"
                        android:contentDescription="Bookmark"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ San Francisco, USA"
                        android:textSize="13sp"
                        android:textColor="#666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¼ Remote"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$90K - $110K/year"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#00C853"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posted 5 days ago"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Job Card 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/img"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/img"
                        android:background="@drawable/img"
                        android:padding="8dp"
                        android:contentDescription="Company Logo" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Manager"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Microsoft"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/img"
                        android:contentDescription="Bookmark"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Seattle, USA"
                        android:textSize="13sp"
                        android:textColor="#666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¼ Full-Time"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$130K - $160K/year"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#00C853"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posted 1 week ago"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>