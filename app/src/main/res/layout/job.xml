                app:cardElevation="2dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/jobTitle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Senior Frontend Developer"
                        android:textSize="18sp"
                        android:textColor="#212121"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        app:layout_constraintEnd_toStartOf="@id/salary1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/salary1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_salary_badge"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="$120k-$160k"
                        android:textColor="#1976D2"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/company1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="TechCorp"
                        android:textSize="15sp"
                        android:textColor="#616161"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/jobTitle1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/company1">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@android:drawable/ic_dialog_map"
                            app:tint="#9E9E9E" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="San Francisco, CA"
                            android:textSize="13sp"
                            android:textColor="#757575" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="12dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            app:tint="#9E9E9E" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="Full-time"
                            android:textSize="13sp"
                            android:textColor="#757575" />

